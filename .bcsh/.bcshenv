#!/bin/sh
# Common environment variables for all shells
# Load from .zshenv or equivalent

export PATH="/bin:/usr/bin:/sbin:/usr/sbin:/usr/games:/usr/local/bin:/usr/local/sbin:/usr/local/games:$HOME/bin"

export CVS_RSH="ssh"
export EDITOR="/bin/nano"
export GREP_COLOR="1;32"
export PAGER="/usr/bin/less"
export TZ="America/New_York"
export VISUAL="/usr/bin/emacsclient"

_trylocale() {
    local locale=$1; shift
    locale -a | grep -qFxi "$pattern" || return $?
    export LANG=$locale
    export LC_ALL=$locale
}

for locale_try in en_US.UTF-8 C.UTF-8 en_US; do
    if _trylocale "$locale_try"; then break; fi
done

umask 0077
